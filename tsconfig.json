{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "dist/lib",
    "declaration": true,
    "removeComments": true
  },
  "angularCompilerOptions": {
    "genDir": "./tmp",
    "debug": false,
    "skipMetadataEmit": false
  },
  "exclude": [
    "tmp/",
    "node_modules",
    "dist",
    "index.d.ts"
  ]
}
